{
    "name": "realodix/change-case",
    "description": "Convert strings between camelCase, PascalCase, Headline Case, snake_case and more.",
    "license": "MIT",
    "keywords": ["lowercase", "uppercase", "camel-case", "snake-case", "pascal-case", "change-case", "constant-case"],
    "authors": [{"name": "Budi Hermawan", "role": "Developer" }],
    "homepage": "https://github.com/realodix/change-case",
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "symfony/options-resolver": "^6.1 || ^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5 || ^11.0",
        "realodix/relax": "^1.18"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Realodix\\ChangeCase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Realodix\\ChangeCase\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "4.x-dev"
        }
    }
}
