{
    "name": "realodix/change-case",
    "description": "Convert strings between camelCase, PascalCase, Capital Case, snake_case and more.",
    "license": "MIT",
    "authors": [
        {
            "name": "Budi Hermawan",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/realodix/change-case",
    "keywords": [
        "lowercase", "uppercase", "camel-case", "snake-case", "pascal-case", "change-case", "constant-case"
    ],
    "require": {
        "php": "^7.3|^8.0",
        "voku/portable-utf8": "^5.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.14",
        "phpunit/phpunit": "^9",
        "realodix/php-cs-fixer-config": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Realodix\\ChangeCase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Realodix\\ChangeCase\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
